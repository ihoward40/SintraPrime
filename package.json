{
  "name": "agent-mode-engine",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && tsc -p tsconfig.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "dev": "tsx src/cli/run-command.ts",
    "start": "node dist/cli/run-command.js",
    "smoke": "node ./scripts/smoke.js",
    "smoke:local": "node ./scripts/smoke-local.js",
    "smoke:trim": "node ./scripts/smoke.js | node ./scripts/trim-output.js",
    "smoke:vectors": "node ./scripts/smoke-vectors.js",
    "smoke:vectors:trim": "node ./scripts/smoke-vectors.js | node ./scripts/trim-output.js",
    "mock:server": "node ./scripts/mock-server.js",
    "autonomy": "node --loader tsx ./src/cli/run-autonomy.ts",
    "demo:visual-browser": "node ./scripts/visual-browser-demo/demo.mjs",
    "pdf:render": "node ./scripts/pdf/render-court-pdf.mjs",
    "pdf:render:verified": "node ./scripts/pdf/render-court-pdf-verified.mjs",
    "pdf:append": "node ./scripts/pdf/append-pdf.mjs",
    "ui:server": "node ./ui/server.js",
    "ui:client": "npm --prefix ui/client run dev",
    "ui:build": "npm --prefix ui/client run build",
    "verify:audit": "node ./scripts/verify.js"
  },
  "dependencies": {
    "express": "^4.21.2",
    "yazl": "^3.2.0",
    "yauzl": "^2.10.0",
    "rrule": "^2.8.1",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "markdown-it": "^14.1.0",
    "pdf-lib": "^1.17.1",
    "playwright": "^1.57.0",
    "puppeteer": "^23.11.1",
    "qrcode": "^1.5.4",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
