{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "sintraprime://schemas/cases.schema.json",
  "title": "Cases",
  "description": "Incident case tracking for credit monitoring system",
  "type": "object",
  "required": [
    "Case_ID",
    "Title",
    "Category",
    "Severity",
    "Status"
  ],
  "properties": {
    "Case_ID": {
      "type": "string",
      "pattern": "^CASE-[0-9]{8}-[A-Z0-9]{6}$",
      "description": "Unique case identifier in format CASE-YYYYMMDD-XXXXXX"
    },
    "Title": {
      "type": "string",
      "maxLength": 240,
      "description": "Human-readable case title"
    },
    "Category": {
      "enum": [
        "Cost/Credits",
        "Data/PII",
        "Delivery/Email",
        "Filing/Regulatory",
        "Reliability",
        "Other"
      ],
      "description": "Case category classification"
    },
    "Severity": {
      "enum": ["SEV0", "SEV1", "SEV2", "SEV3", "SEV4"],
      "description": "Case severity level"
    },
    "Exposure_Band": {
      "enum": ["Regulatory", "Financial", "Privacy", "Operational"],
      "description": "Risk exposure classification"
    },
    "Status": {
      "enum": ["Open", "Investigating", "Mitigating", "Resolved"],
      "description": "Current case status"
    },
    "Slack_Thread_URL": {
      "type": "string",
      "format": "uri",
      "description": "Link to Slack discussion thread"
    },
    "Root_Cause": {
      "enum": [
        "Misconfig",
        "Legit Load",
        "External Dependency",
        "Unknown"
      ],
      "description": "Determined root cause after investigation"
    }
  }
}