# Required: HMAC signing secret (shared with sender scripts)
MANUS_SHARED_SECRET=your-long-random-secret-here-32plus-chars

# Required: Make.com webhook URL (get this from Make scenario)
MAKE_WEBHOOK_URL=https://hook.us1.make.com/your-webhook-id

# Required: Secondary HMAC secret for Airlockâ†’Make signature
AIRLOCK_SHARED_SECRET=another-long-random-secret-32plus-chars

# Optional: CORS origin (default: *)
ACCEPT_ORIGIN=*

# Optional: Max payload size in bytes (default: 10MB)
MAX_BODY_BYTES=10485760

# Optional: Enable dev routes (default: false)
ALLOW_DEV_ROUTES=false

# Optional: Server port (default: 3000)
PORT=3000
