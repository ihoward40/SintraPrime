{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "browser.l0.screenshot input",
  "type": "object",
  "additionalProperties": false,
  "required": ["execution_id", "step_id", "url", "timeoutMs"],
  "properties": {
    "execution_id": { "type": "string", "minLength": 1 },
    "step_id": { "type": "string", "minLength": 1 },
    "url": { "type": "string", "minLength": 1 },
    "timeoutMs": { "type": "integer", "minimum": 1 },
    "fullPage": { "type": "boolean" },
    "mode": { "type": "string", "enum": ["strict", "same_origin"], "default": "same_origin" },
    "viewport": {
      "type": "object",
      "additionalProperties": false,
      "required": ["width", "height"],
      "properties": {
        "width": { "type": "integer", "minimum": 100, "maximum": 4096 },
        "height": { "type": "integer", "minimum": 100, "maximum": 4096 }
      }
    },
    "maxRequests": { "type": "integer", "minimum": 1, "maximum": 2000 }
  }
}
