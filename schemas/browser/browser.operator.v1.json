{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "browser.operator.v1",
  "title": "SintraPrime Browser Operator Input (v1)",
  "type": "object",
  "additionalProperties": false,
  "required": ["mode", "target", "actions"],
  "properties": {
    "mode": {
      "type": "string",
      "enum": ["offline", "network"],
      "description": "Discriminator for policy gating: offline=file:// or local file; network=http/https"
    },
    "target": {
      "type": "string",
      "minLength": 1,
      "description": "file:// URL or http(s) URL or a local path (CLI may rewrite to file://)"
    },
    "actions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["type"],
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "navigate",
              "wait_for_selector",
              "wait_ms",
              "click",
              "type",
              "extract_text",
              "screenshot"
            ]
          },
          "url": { "type": "string" },
          "wait_until": { "type": "string", "enum": ["load", "domcontentloaded", "networkidle0", "networkidle2"] },
          "timeout_ms": { "type": "integer", "minimum": 0 },

          "selector": { "type": "string", "minLength": 1 },
          "ms": { "type": "integer", "minimum": 0 },
          "text": { "type": "string" },
          "key": { "type": "string" },

          "name": { "type": "string" },
          "full_page": { "type": "boolean" }
        },
        "allOf": [
          {
            "if": { "properties": { "type": { "const": "wait_for_selector" } } },
            "then": { "required": ["selector"], "properties": { "selector": { "type": "string", "minLength": 1 } } }
          },
          {
            "if": { "properties": { "type": { "const": "wait_ms" } } },
            "then": { "required": ["ms"], "properties": { "ms": { "type": "integer", "minimum": 0 } } }
          },
          {
            "if": { "properties": { "type": { "const": "click" } } },
            "then": { "required": ["selector"], "properties": { "selector": { "type": "string", "minLength": 1 } } }
          },
          {
            "if": { "properties": { "type": { "const": "type" } } },
            "then": { "required": ["selector", "text"], "properties": { "selector": { "type": "string", "minLength": 1 }, "text": { "type": "string" } } }
          },
          {
            "if": { "properties": { "type": { "const": "extract_text" } } },
            "then": { "required": ["selector"], "properties": { "selector": { "type": "string", "minLength": 1 } } }
          }
        ]
      }
    },
    "options": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "headless": { "type": "boolean" },
        "slow_mo_ms": { "type": "integer", "minimum": 0 },
        "navigation_timeout_ms": { "type": "integer", "minimum": 0 },
        "action_timeout_ms": { "type": "integer", "minimum": 0 },
        "viewport": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "width": { "type": "integer", "minimum": 1 },
            "height": { "type": "integer", "minimum": 1 }
          }
        }
      }
    }
  }
}
