{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "schema": "competitive.brief.v1",
  "title": "competitive.brief.v1 input",
  "type": "object",
  "additionalProperties": false,
  "required": ["targets"],
  "properties": {
    "targets": {
      "type": "array",
      "minItems": 1,
      "maxItems": 10,
      "items": { "type": "string", "format": "uri" }
    },
    "screenshot": {
      "type": "object",
      "additionalProperties": false,
      "required": ["enabled"],
      "properties": {
        "enabled": { "type": "boolean" },
        "mode": {
          "type": "string",
          "enum": ["same_origin", "strict"],
          "default": "same_origin"
        },
        "maxRequests": { "type": "integer", "minimum": 1, "maximum": 200 },
        "viewport": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "width": { "type": "integer", "minimum": 320, "maximum": 3840 },
            "height": { "type": "integer", "minimum": 320, "maximum": 2160 }
          }
        },
        "fullPage": { "type": "boolean", "default": false }
      }
    },
    "wideResearch": {
      "type": "object",
      "additionalProperties": false,
      "required": ["enabled"],
      "properties": {
        "enabled": { "type": "boolean", "default": false },
        "budget": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "maxSubtasks": { "type": "integer", "minimum": 1, "maximum": 25, "default": 8 },
            "maxWallSeconds": { "type": "integer", "minimum": 30, "maximum": 3600, "default": 300 }
          }
        }
      }
    },
    "depth": { "type": "string", "enum": ["tight", "normal"], "default": "tight" }
  }
}
